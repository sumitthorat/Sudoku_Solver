<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:opencv="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sudokusolver.SudokuLiveDetection" >


    <com.example.sudokusolver.PortraitCameraView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        opencv:show_fps="true"
        android:id="@+id/javaCamera"
        opencv:camera_id = "any"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />


    <com.github.clans.fab.FloatingActionButton
        android:onClick="flashToggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/lime"
        android:src="@drawable/icons8_flash_on"
        fab:fab_colorNormal="#80deea"
        android:layout_alignTop="@+id/floatingActionButton"
        android:layout_alignParentStart="true"
        android:layout_marginStart="48dp" />

    <com.github.clans.fab.FloatingActionButton
        android:onClick="captureButtonClicked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="12dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@color/lime"
        android:src="@drawable/icons8_surgical_scissors"
        fab:fab_colorNormal="@color/lime"
        android:id="@+id/floatingActionButton" />





</RelativeLayout>
